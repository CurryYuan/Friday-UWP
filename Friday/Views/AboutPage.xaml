<Page
    x:Class="Friday.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Friday.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/images/CoursePics/1.png"/>
        </Grid.Background>
        <Grid Background="White" Height="50" VerticalAlignment="Top" BorderBrush="{ThemeResource Friday-BorderBrush}" BorderThickness="0,0,0,0.5">
            <AppBarButton Click="GoBackBtn_Clicked" Foreground="{ThemeResource Friday-Foreground}" Background="{x:Null}" VerticalAlignment="Stretch" Icon="Back"></AppBarButton>
            <TextBlock FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center">关于</TextBlock>
        </Grid>
        <ScrollViewer Margin="10,50,10,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                    <Image Source="ms-appx:///Assets/StoreLogo.scale-100.png" Width="100" Height="100"></Image>
                    <StackPanel>
                        <TextBlock IsTextSelectionEnabled="True" TextWrapping="WrapWholeWords" Margin="5" FontSize="18">超级课程表 第三方UWP</TextBlock>
                        <TextBlock IsTextSelectionEnabled="True" TextWrapping="WrapWholeWords" Margin="5" FontSize="18" x:Name="ver_text"></TextBlock>

                        <TextBlock IsTextSelectionEnabled="True" TextWrapping="WrapWholeWords" Margin="5">初生之鸟 driver1998</TextBlock>
                    </StackPanel>

                </StackPanel>

                <StackPanel>

                    <TextBlock TextWrapping="WrapWholeWords" Margin="5" FontSize="18">说明及联系</TextBlock>

                    <TextBlock TextWrapping="WrapWholeWords">本程序基于@座子狮(zuozishi)的工作<LineBreak></LineBreak>在此表示感谢<LineBreak></LineBreak></TextBlock>

                    <TextBlock IsTextSelectionEnabled="True" TextWrapping="WrapWholeWords">Email:driver1998@foxmail.com</TextBlock>

                    <TextBlock IsTextSelectionEnabled="True" TextWrapping="WrapWholeWords">QQ:532885675</TextBlock>

                    <StackPanel Orientation="Horizontal">

                        <HyperlinkButton NavigateUri="mailto:driver1998@foxmail.com" Margin="0,0,15,0">给我发邮件</HyperlinkButton>

                        <HyperlinkButton NavigateUri="https://github.com/driver1998/Friday-UWP">访问Github</HyperlinkButton>

                    </StackPanel>

                </StackPanel>


                <StackPanel>

                    <TextBlock TextWrapping="WrapWholeWords" Margin="5" FontSize="18">座子狮(zuozishi) 其它应用</TextBlock>
                    <HyperlinkButton NavigateUri="ms-windows-store://pdp/?productid=9p1l6rlcfr5r" Margin="0,0,15,0">滴滴出行Lite</HyperlinkButton>
                    <HyperlinkButton NavigateUri="ms-windows-store://pdp/?productid=9nblggh42png" Margin="0,0,15,0">快递追踪</HyperlinkButton>
                </StackPanel>

                <StackPanel>
                    <TextBlock TextWrapping="WrapWholeWords" Margin="5" FontSize="18">引用及参考</TextBlock>
                    <HyperlinkButton NavigateUri="http://www.super.cn/" Margin="0,0,15,0">超级课程表/源数据</HyperlinkButton>
                    <HyperlinkButton NavigateUri="https://github.com/zuozishi/Friday-UWP" Margin="0,0,15,0">超级课程表UWP @座子狮(zuozishi)</HyperlinkButton>
                    <HyperlinkButton NavigateUri="http://www.newtonsoft.com/json" Content="Newtonsoft/JSON.NET"/>
                    <HyperlinkButton NavigateUri="https://github.com/EdiWang/UWP-Helpers/" Content="Edi.UWP.Helpers"/>
                    <HyperlinkButton NavigateUri="https://github.com/brookshi/LLMAnimator" Content="LLMAnimator"/>
                    <HyperlinkButton NavigateUri="https://github.com/MS-UAP/PullToRefresh.UWP" Content="PullToRefresh.UWP"/>
                    <HyperlinkButton NavigateUri="https://github.com/codebude/QRCoder/" Content="QRCoder"/>
                    <HyperlinkButton NavigateUri="http://github.com/Redth/ZXing.Net.Mobile" Content="ZXing.Net.Mobile"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
